 .container,.container .content{
     padding: 0;
     width: 100%;
 }
.container .content .top{
    width: 100%;
    height: 440rpx;
    margin-bottom: 40rpx;
    position: relative;
}
.container .content .top .img{
    width: 100%;
    height: 100%;
    z-index: 1;
    background: rgba(0,0,0,0.5);
}
.container .content .top .img image{
    width: 100%;
    height: 100%;
    max-width: 100%;
    position: relative;
    z-index: -1;
}
.container .content .top .info{
    position: absolute;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
    padding-top: 140rpx;
    box-sizing: border-box;
    z-index: 4;
}
.container .content .top .info image{
    position: relative;
    display: block;
    width: 216rpx;
    height: 24rpx;
    margin:0 auto;
}
.container .content .top .info .title{
    width: 620rpx;
    text-align: center;
    font-size: 56rpx;
    font-weight: 600;
    line-height: 56rpx;
    color:#fff;
    margin:36rpx auto 28rpx;
}
.container .content .top .info .text{
    width: 620rpx;
    text-align: center;
    margin: 0 auto;
    font-size: 24rpx;
    line-height: 36rpx;
    font-weight: 400;
    color:#fff;
}
.container .content .bot{
    padding: 0 20rpx;
}
.container .content .bot .wrap-item{
    width: 100%;
    border-bottom: 1rpx solid #E2E2E2;
    padding-bottom:34rpx;
    margin-bottom: 34rpx;
}
.container .content .bot .wrap-item .img{
    width: 176rpx;
    height: 176rpx;
}
.container .content .bot .wrap-item .img image{
    width: 100%;
    height: 100%;
    max-width: 100%;
}
.container .content .bot .wrap-item .info{
    width: 500rpx;
}
.container .content .bot .wrap-item .info .title{
    width: 100%;
    color: #020202;
    font-weight: 400;
    font-size: 30rpx;
    line-height: 32rpx;
    margin-bottom: 16rpx;
}
.container .content .bot .wrap-item .info .text{
    width: 100%;
    color:#9B9B9B;
    font-weight: 300;
    font-size: 24rpx;
    line-height: 1;
    margin-bottom: 30rpx;
}
.container .content .bot .wrap-item .info .other{
    width: 100%;
}
.container .content .bot .wrap-item .info .other .num image{
    display: inline-block;
    width: 26rpx;
    height: 22rpx;
    max-width: 100%;
    margin-right: 6rpx;
}
.container .content .bot .wrap-item .info .other .num view{
    display: inline-block;
    color: #9B9B9B;
    font-size: 24rpx;
    line-height: 1;
    font-weight: 300;
}
.container .content .bot .wrap-item .info .other .sub{
    display: inline-block;
    width: 132rpx;
    height: 48rpx;
    max-width: 100%;
}
.container .content .bot .end{
    width: 100%
}
.container .content .bot .end .line{
    width: 24rpx;
    border-bottom: 2rpx solid #9b9b9b;
}
.container .content .bot .end .text{
    color: #9b9b9b;
    font-size: 24rpx;
    font-weight: 400;
    margin:0 6rpx;
}